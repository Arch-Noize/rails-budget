<%= render partial: "shared/navbar", locals: { title: "Categories", logout: true, back_path: groups_path } %>

<div id="groups">
  <% @groups.each do |group| %>
    <%= link_to group_purchases_path(group) do %>
      <div class="grid grid-cols-4 gap-1 m-2 border-2 border-grey bg-white p-2 items-center">
        <div class="col-span-1">
          <img src=<%=group.icon%> class="w-full h-24 object-cover border-2 rounded border-black">
        </div>
        <div class="col-span-2 flex flex-col -mx-10 justify-between p-4">
          <p><%= group.name %></p>
          <p><%= group.created_at.strftime("%d/%m/%Y") %></p>
        </div>
        <div class="col-span-1 p-4 font-bold">
          <p><%= group.total %>$</p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to new_group_path, class:"fixed inset-x-0 bottom-0 bg-[#5fb523] p-5 text-center text-white hover:bg-[#55a01f]" do%>
  <div class="p-2 border border-white">
    New Category
  </div>
<% end %>
