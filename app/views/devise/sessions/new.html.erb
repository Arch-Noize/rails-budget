<%= render partial: "shared/navbar", locals: { title: "Log in", show_burger: false, back_path: root_path } %>

<div class="container mx-auto px-5 flex flex-col space-y-4">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="w-full">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "appearance-none block w-full"  %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "appearance-none block w-full"  %>
    </div>

    <div class="fixed inset-x-0 bottom-0 bg-[#5fb523] p-5 text-center text-white hover:bg-[#55a01f]">
      <%= f.submit "Log in", class: "p-2 w-40 border border-white" %>
    </div>

    <div class="w-full text-center">
      Forgot Password?
    </div>
  <% end %>
</div>

