<%= render partial: "shared/navbar", locals: { title: "Add Transaction", show_burger: true } %>

<div class="form">
  <%= form_with(model: @purchase, url: group_purchases_path, local: true, method: :post) do |f| %>  
    <div>
      <%= f.label :name %> <br />
      <%= f.text_field :name, autocomplete: "off" %>
    </div>

    <div>
      <%= f.label :amount %> <br />
      <%= f.number_field :amount, in: 1..10000, step: 0.01, autocomplete: "off" %>
    </div>

    <div>
      <%= f.submit class: "button" %>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "Back to purchases", group_purchases_path(@group) %>
</div>