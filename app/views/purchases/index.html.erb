<%= render partial: "shared/navbar", locals: { title: "Purchases", show_burger: false, back_path: groups_path } %>

<div id="purchases">
  <% @purchases.each do |purchase| %>
    <div class="grid grid-cols-4 gap-1 m-2 border-2 border-grey bg-white p-2 items-center">
      <div class="col-span-1">
        <img src=<%=@group.icon%> class="w-full h-24 object-cover border-2 rounded border-black">
      </div>
      <div class="col-span-2 -mx-10 flex flex-col p-4">
        <p><%= purchase.name %></p>
        <p><%= purchase.created_at.strftime("%d/%m/%Y") %></p>
      </div>
      <div class="col-span-1 p-4 font-bold">
        <p><%= purchase.amount %>$</p>
      </div>
    </div>
  <% end %>
</div>

<%= link_to new_group_purchase_path(@group), class:"fixed inset-x-0 bottom-0 bg-[#5fb523] p-5 text-center text-white hover:bg-[#55a01f]" do%>
  <div class="p-2 border border-white">
    New purchase
  </div>
<% end %>
